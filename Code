def roll_one ()
    choosen_number_one = int(input(print("Dobj egy kockával! Ezt most úgy te meg, hogy bírsz egy általad választott számot: \n"))
    for x in range(1):
    hero_latestroll_one = int((random.randint(1, 9999)))
    dice = (int(hero_latestroll_one) + int (choosen_number_one)) % 6
    if dice == 0
    finalnumber = 6
    else:
    finalnumber = dice
    print: ("A döbött szám: " + str(finalnumber) + " !")


